<!DOCTYPE html>
<html>
<head>
  <title>LuigisGrubReviews</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <div class="nav-bar table-responsive" id="navBar">
    <table class="table">
      <th><%= link_to "PRODUCTS", products_path%></th>
      <% if user_signed_in? %>
      <th class="authenticate"><%= current_user.email %>
      <th class="authenticate">
        <% if current_user.admin == true %>
        <%= "Admin"  %>
        <% elsif current_user.admin == false %>
        <%= "User"  %>
        <% end %>
      <th class="authenticate"><%= link_to "SIGN-OUT", destroy_user_session_path, :method => :delete%></th>
      <% else %>
      <th class="authenticate"><%= link_to "Sign-In/Sign-Up", new_user_session_path%></th>
      <% end %>
    </table>
  </div>
  <%= flash[:alert] %>
  <%= flash[:notice] %>
  <%= yield %>
</body>
</html>
