<h1><%= @product.name %></h1>
<h3>This item costs $<%= @product.cost %></h3>
<h3>This item was created in <%= @product.country_of_origin %></h3>

<% if @product.reviews.any? %>
  <h4>Here are the reviews for this product:</h4>

  <% @product.reviews.each do |review| %>
    <ul>
      <li class="review">
        <%= link_to review.title, product_review_path(@product, review) %>
      </li>
    </ul>
  <% end %>
<% else %>
  <p>No review are listed for this product.</p>
<% end %>

<p class="link"><%= link_to "Add a review", new_product_review_path(@product) %></p>

<p class="link"><%= link_to "Edit", edit_product_path(@product) %></p>
<p class="link"><%= link_to "Delete", product_path(@product),
                         :data => {:confirm => "You sure?",
                                   :method => "delete"} %></p>

<p class="link"><%= link_to "Return to products", products_path %></p>
