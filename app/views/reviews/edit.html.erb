<h1>Edit review:</h1>

<div class="link">

<%= form_for [@product, @review] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.label :content_body %>
  <%= f.text_area :content_body %>
  <%= f.label :rating %>
  <%= f.number_field :rating %>
<p><%= f.submit %></p>
<% end %>
</div>
